<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Auth.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/logo_getstarted"
            android:layout_marginTop="30dp">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in to your account"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="35dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome back, please enter your details."
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/black">
        </TextView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_loginGoogle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cornerRadius="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:icon="@drawable/google"
            app:iconGravity="start"
            app:iconSize="20dp"
            app:iconTint="@null"
            android:backgroundTint="@color/grey"
            android:text="Continue with Google"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular">
        </com.google.android.material.button.MaterialButton>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/barisor"
            android:layout_marginTop="20dp">
        </ImageView>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:startIconDrawable="@drawable/baseline_email_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:paddingStart="50dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_bottom_border">
            </com.google.android.material.textfield.TextInputEditText>


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:passwordToggleEnabled="true"
            app:startIconDrawable="@drawable/baseline_lock_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:paddingStart="50dp"
                android:inputType="textPassword"
                android:background="@drawable/edittext_bottom_border">
            </com.google.android.material.textfield.TextInputEditText>


        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:layout_marginLeft="30dp"
                android:textSize="12sp"
                android:backgroundTint="@color/blue_600"
                android:fontFamily="@font/poppins_regular"/>


            <TextView
                android:id="@+id/conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget Password ?"
                android:layout_marginLeft="110dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>

        <ProgressBar
            android:layout_marginTop="@dimen/margin_small"
            android:id="@+id/progressBarLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_bt_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cornerRadius="8dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:backgroundTint="@color/blue_600"
            android:text="Login"
            android:fontFamily="@font/poppins_bold">
        </com.google.android.material.button.MaterialButton>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newmember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular"
                />

            <TextView
                android:id="@+id/login_btn_signup"
                android:layout_toRightOf="@id/newmember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Sign Up"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/blue_600">
            </TextView>

        </LinearLayout>


    </LinearLayout>





</FrameLayout>