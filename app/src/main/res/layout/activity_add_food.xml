<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    android:background="@color/blue_500"
    tools:context=".MenuUser.AddFoodActivity">

    <TextView
        android:layout_marginTop="@dimen/margin_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Makanan"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="@dimen/margin_large"
        android:textAlignment="center"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waktu Makan"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="40dp">
    </TextView>

    <Spinner
        android:layout_marginTop="10dp"
        android:id="@+id/makan_spinner_makan"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:background="@drawable/border_et"
        android:paddingStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Makanan"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="20dp">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/grey"
        android:textColorHint="@color/md_grey_700"
        android:hint="Nama Makanan">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/makan_et_name"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:background="@drawable/border_et"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jam Makan"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="20dp">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:id="@+id/datePickerTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/baseline_access_time_24"
        app:boxStrokeColor="@color/transparent"
        app:hintTextColor="@color/md_grey_700"
        android:textColorHint="@color/md_grey_700"
        android:hint="Jam Makan">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/makan_time"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:background="@drawable/border_et"
            android:focusable="false"
            android:clickable="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Kalori"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="20dp">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/md_grey_700"
        app:hintTextColor="@color/md_grey_700"
        android:textColorHint="@color/md_grey_700"
        android:hint="Jumlah Kalori Makanan">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/makan_et_kalori"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:background="@drawable/border_et"
            />

    </com.google.android.material.textfield.TextInputLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="60dp"
        android:id="@+id/makan_bt_submit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:text="Simpan"/>



</LinearLayout>