<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuUser.ChooseMenuActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="@dimen/margin_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_xlager"
            android:textColor="@color/blue_500"
            android:text="Pilih Makanan"/>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="6dp">
            <EditText
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_gravity="center_horizontal"
                android:id="@+id/sgn_password"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/ic_search_grey_24dp"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/rounded_edittext"
                android:drawablePadding="10dp"
                android:hint="Cari makanann"
                />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/choose_toCustom"
            android:background="@drawable/rounded_custommakanan"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Custom Tambah Makanan"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"

            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_height="match_parent"/>


    </LinearLayout>

</RelativeLayout>